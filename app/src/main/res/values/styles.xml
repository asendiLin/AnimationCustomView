<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="MMProgressLine">
        <attr name="pl_tag_width" format="dimension" />
        <attr name="pl_tag_height" format="dimension" />
        <attr name="pl_line_stroke" format="dimension" />
        <attr name="pl_line_color" format="color" />
        <attr name="pl_text_color" format="color" />
        <attr name="pl_progress_color" format="color" />
        <attr name="pl_text_size" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ScrollTextView">
        <attr name="android:textColor" format="color"/>
        <attr name="android:textSize" format="dimension"/>
        <attr name="android:textStyle" format="integer"/>
    </declare-styleable>
</resources>
